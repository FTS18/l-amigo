{
  "manifest_version": 3,
  "name": "L'Amigo",
  "version": "1.3.0",
  "description": "Track friends' LeetCode progress with tabbed interface and comprehensive sync settings",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://leetcode.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "favicon-16x16.png",
      "48": "android-chrome-192x192.png",
      "128": "android-chrome-512x512.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png",
    "48": "android-chrome-192x192.png",
    "128": "android-chrome-512x512.png",
    "180": "apple-touch-icon.png"
  }
}
